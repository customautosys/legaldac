{
	"compilerOptions":{
		"target":"es2022",
		"module":"es2022",
		"strict":true,
		"outDir":"dist/",
		"esModuleInterop":true,
		"skipLibCheck":true,
		"declaration":true,
		"forceConsistentCasingInFileNames":true,
		"resolveJsonModule":true,
		"moduleResolution":"node",
		"allowSyntheticDefaultImports":true
	},
	"include":[
		"src/**/*.ts",
		"rollup.config.ts"
	]
}